---
const { lang } = Astro.props
import HatenaIcon from "../../icons/hatena.astro"
import NoteIcon from "../../icons/note.astro"
import ChatIcon from "../../icons/chat.astro"
import Connect4Icon from "../../icons/connect-4.astro"
import KeyboardIcon from "../../icons/keyboard.astro"
import SearchIcon from "../../icons/search.astro"
import UniversityIcon from "../../icons/university.astro"
// import AnalyticsIcon from "../../icons/analytics.astro"
import TwitterIcon from "../../icons/twitter.astro"
import GitHubIcon from "../../icons/github.astro"
import YouTubeIcon from "../../icons/youtube.astro"
import LinkedInIcon from "../../icons/linkedin.astro"
import InstagramIcon from "../../icons/instagram.astro"
import FacebookIcon from "../../icons/facebook.astro"
---

<div class="mobile-content">
	<section>
		<h2>{lang === "ja" ? "ブログ" : "Blog"}</h2>
		<div class="social-icons">
			<a
				id="hatena-blog-link"
				href="https://taroj1205.hatenablog.com"
				target="_blank"
				class="social-icon blog-icon"
				title={lang === "ja" ? "はてなブログ" : "Hatena Blog"}>
				<HatenaIcon />
				<span>{lang === "ja" ? "はてなブログ" : "Hatena Blog"}</span>
			</a>
			<a
				id="note-link"
				href="https://note.com/taroj1205"
				target="_blank"
				class="social-icon blog-icon"
				title="note">
				<NoteIcon />
				<span>note</span>
			</a>
		</div>
	</section>
	<section>
		<h2>{lang === "ja" ? "アプリ" : "Apps"}</h2>
		<div class="social-icons">
			<a
				id="chat-app-link"
				href="https://chat-taroj.vercel.app/"
				target="_blank"
				class="social-icon app-icon"
				title={lang === "ja" ? "チャットアプリ" : "Chat App"}>
				<ChatIcon />
				<span>{lang === "ja" ? "チャットアプリ" : "Chat App"}</span>
			</a>
			<a
				id="connect4-link"
				href="https://connect4-taroj.vercel.app/"
				target="_blank"
				class="social-icon app-icon"
				title="Connect 4">
				<Connect4Icon />
				<span>Connect 4</span>
			</a>
			<a
				id="typing-game-link"
				href="https://typing-game-nextjs.vercel.app/"
				target="_blank"
				class="social-icon app-icon"
				title={lang === "ja" ? "タイピングゲーム" : "Typing Game"}>
				<KeyboardIcon />
				<span>{lang === "ja" ? "タイピングゲーム" : "Typing Game"}</span>
			</a>
			<a
				id="search-app-link"
				href="https://taroj.vercel.app/apps/search"
				target="_blank"
				class="social-icon app-icon"
				title={lang === "ja" ? "検索アプリ" : "Search App"}>
				<SearchIcon />
				<span>{lang === "ja" ? "検索アプリ" : "Search App"}</span>
			</a>
			<a
				id="uoa-links-link"
				href="https://taroj1205.poyo.jp/uoa"
				target="_blank"
				class="social-icon app-icon"
				title={lang === "ja" ? "UoAのリンク等" : "UoA Links"}>
				<UniversityIcon />
				<span>{lang === "ja" ? "UoAのリンク等" : "UoA Links"}</span>
			</a>
			<!-- <a
				id="analytics-link"
				href="https://analytics.eu.umami.is/share/nU5pqI425dwMvrAA/taroj1205.poyo.jp"
				target="_blank"
				class="social-icon app-icon"
				title={lang === "ja" ? "分析" : "Analytics"}>
				<AnalyticsIcon />
				<span>{lang === "ja" ? "分析" : "Analytics"}</span>
			</a> -->
		</div>
	</section>
	<section>
		<h2>{lang === "ja" ? "ソーシャル" : "Social"}</h2>
		<div class="social-icons">
			<a
				id="twitter-link"
				href="https://twitter.com/taroj1205"
				target="_blank"
				class="social-icon social-icon"
				title="Twitter">
				<TwitterIcon />
				<span>Twitter</span>
			</a>
			<a
				id="github-link"
				href="https://github.com/taroj1205"
				target="_blank"
				class="social-icon social-icon"
				title="GitHub">
				<GitHubIcon />
				<span>GitHub</span>
			</a>
			<a
				id="instagram-link"
				href="https://instagram.com/taroj1205"
				target="_blank"
				class="social-icon social-icon"
				title="Instagram">
				<InstagramIcon />
				<span>Instagram</span>
			</a>
			<a
				id="youtube-link"
				href="https://youtube.com/@taroj1205"
				target="_blank"
				class="social-icon social-icon"
				title="YouTube">
				<YouTubeIcon />
				<span>YouTube</span>
			</a>
			<a
				id="linkedin-link"
				href="https://linkedin.com/in/taroj"
				target="_blank"
				class="social-icon social-icon"
				title="LinkedIn">
				<LinkedInIcon />
				<span>LinkedIn</span>
			</a>
			<a
				id="facebook-link"
				href="https://facebook.com/taroj1205"
				target="_blank"
				class="social-icon social-icon"
				title="Facebook">
				<FacebookIcon />
				<span>Facebook</span>
			</a>
		</div>
	</section>
</div>

<style>
	.mobile-content {
		display: flex;
		flex-direction: column;
		gap: 20px;
		padding: 20px;
		overflow-y: auto;
		height: 100%;

		backdrop-filter: blur(15px);
		-webkit-backdrop-filter: blur(15px);
		background-color: rgba(0, 0, 0, 0.8);

		width: calc(100% - 40px);
		padding-top: 3rem;
	}

	h2 {
		font-size: 24px;
		margin-bottom: 10px;
		color: hsl(0, 0%, 85%);
	}

	.social-icons {
		display: flex;
		flex-wrap: wrap;
		gap: 10px;
	}

	a {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 8px;
		text-decoration: none;
		padding: 10px;
		border-radius: 5px;
		transition:
			background-color 0.3s ease,
			transform 0.2s ease;
		font-size: var(--fontSizes-lg);
	}

	a:hover {
		background-color: hsl(210, 50%, 90%);
		transform: translateY(-2px);
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
	}

	a svg {
		width: 24px;
		height: auto;
	}

	#hatena-blog-link {
		color: hsl(210, 90%, 30%);
		background-color: hsl(210, 100%, 98%);
	}
	#note-link {
		color: hsl(30, 90%, 30%);
		background-color: hsl(30, 100%, 98%);
	}
	#chat-app-link {
		color: hsl(90, 90%, 30%);
		background-color: hsl(90, 100%, 98%);
	}
	#connect4-link {
		color: hsl(180, 90%, 30%);
		background-color: hsl(180, 100%, 98%);
	}
	#typing-game-link {
		color: hsl(270, 90%, 30%);
		background-color: hsl(270, 100%, 98%);
	}
	#search-app-link {
		color: hsl(60, 90%, 30%);
		background-color: hsl(60, 100%, 98%);
	}
	#uoa-links-link {
		color: hsl(300, 90%, 30%);
		background-color: hsl(300, 100%, 98%);
	}
	#analytics-link {
		color: hsl(0, 90%, 30%);
		background-color: hsl(0, 100%, 98%);
	}
	#twitter-link {
		color: hsl(190, 90%, 30%);
		background-color: hsl(190, 100%, 98%);
	}
	#github-link {
		color: var(--text-color);
		background-color: hsl(0, 0%, 98%);
	}
	#instagram-link {
		color: hsl(330, 90%, 30%);
		background-color: hsl(330, 100%, 98%);
	}
	#youtube-link {
		color: hsl(0, 90%, 40%);
		background-color: hsl(0, 100%, 98%);
	}
	#linkedin-link {
		color: hsl(210, 70%, 25%);
		background-color: hsl(210, 100%, 98%);
	}
	#facebook-link {
		color: hsl(240, 90%, 50%);
		background-color: hsl(240, 100%, 98%);
	}

	a span {
		color: hsl(210, 20%, 20%);
		font-weight: 500;
	}
</style>
