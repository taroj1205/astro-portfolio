---
import { getTranslations } from "../../i18n/utils"
import Socials from "../socials/index.astro"
import ArrowUpIcon from "../../icons/arrow-up.astro"
import JapanIcon from "../../icons/japan.astro"
import NewZealandIcon from "../../icons/new-zealand.astro"
const { lang } = Astro.props
const { footer } = getTranslations(lang)
---

<footer>
	<a
		href={`/${lang === "ja" ? "en" : "ja"}`}
		class="footer-link"
		title={lang === "ja" ? "To English" : "日本語へ"}>
		{
			lang === "ja" ? (
				<NewZealandIcon size="1.4rem" />
			) : (
				<JapanIcon size="1.4rem" />
			)
		}{footer.lang}</a
	>
	<a href="#" class="scroll-text" title={footer.scrollToTop}
		>{footer.scrollToTop}</a
	>
	<a href="#" class="arrow-up" title={footer.scrollToTop}><ArrowUpIcon /></a>
	<Socials />
</footer>

<style>
	footer {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0 var(--spaces-2);
		max-width: 600px;
		margin: 0 auto;
		height: 4rem;
	}

	.footer-link {
		display: flex;
		align-items: center;
		gap: var(--spaces-1);
	}

	.arrow-up {
		display: none;
		font-size: 1.5rem;
	}

	a {
		text-decoration: none;
		color: var(--gray-color);
		padding: var(--spaces-2);
		display: grid;
		place-items: center;
	}

	a:hover {
		text-decoration: underline;
		color: hsl(0, 0%, 83%);
	}

	@media screen and (max-width: 600px) {
		.arrow-up {
			display: flex;
		}
		.scroll-text {
			display: none;
		}
	}
</style>
